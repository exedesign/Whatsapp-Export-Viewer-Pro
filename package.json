{
  "name": "whatsapp-chat-viewer-tr",
  "version": "3.2.0",
  "private": false,
  "description": "Modern WhatsApp chat viewer with Turkish localization and advanced features. View, analyze and search your WhatsApp chat exports offline.",
  "author": "Fatih Eke <fatiheke@gmail.com>",
  "homepage": "https://github.com/exedesign/whatsapp-chat-viewer-tr",
  "repository": {
    "type": "git",
    "url": "https://github.com/exedesign/whatsapp-chat-viewer-tr.git"
  },
  "bugs": {
    "url": "https://github.com/exedesign/whatsapp-chat-viewer-tr/issues"
  },
  "keywords": [
    "whatsapp",
    "chat",
    "viewer",
    "export",
    "turkish",
    "offline",
    "nextjs",
    "typescript",
    "react"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "next dev -p 5680",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5680 && electron .\"",
    "prep-electron": "node scripts/prepare-electron.js",
  "package:portable": "npm run prep-electron && electron-packager .electron-app \"WhatsApp Chat Viewer TR\" --platform=win32 --arch=x64 --out=portable --overwrite --asar --icon=icon.ico --app-version=%npm_package_version%",
  "package:portable:force-icon": "npm run package:portable && node scripts/force-icon.js",
    "package:installer": "set CSC_IDENTITY_AUTO_DISCOVERY=false&& npm run package:portable && electron-builder --win nsis --config electron-builder.yml",
    "package:onefile": "npm run package:portable && powershell -ExecutionPolicy Bypass -File scripts/make-sfx.ps1"
  },
